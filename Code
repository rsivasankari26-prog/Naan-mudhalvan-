  <script>
    // Line Chart - Monthly Active Users
    const ctx1 = document.getElementById('userChart');
    new Chart(ctx1, {
      type: 'line',
      data: {
        labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul'],
        datasets: [{
          label: 'Active Users',
          data: [400, 600, 800, 700, 1000, 1200, 1500],
          borderColor: '#3949ab',
          borderWidth: 3,
          tension: 0.3,
          fill: false,
        }]
      },
      options: {
        responsive: true,
        scales: { y: { beginAtZero: true } }
      }
    });

    // Bar Chart - Page Views
    const ctx2 = document.getElementById('viewsChart');
    new Chart(ctx2, {
      type: 'bar',
      data: {
        labels: ['Dashboard', 'Courses', 'Assessments', 'Reports', 'Profile'],
        datasets: [{
          label: 'Views',
          data: [2400, 1398, 9800, 3908, 4800],
          backgroundColor: '#1e88e5'
        }]
      },
      options: {
        responsive: true,
        scales: { y: { beginAtZero: true } }
      }
    });
  </script>

